package com.moneymoney.web.circuitbreaker;

import java.net.URI;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.moneymoney.web.entity.Transaction;
import com.netflix.hystrix.contrib.javanica.annotation.HystrixCommand;

@Service
public class TransactionServiceBreaker {
	private final RestTemplate restTemplate;

	public TransactionServiceBreaker(RestTemplate rest) {
		this.restTemplate = rest;
	}

	@HystrixCommand(fallbackMethod = "reliable")
	public ResponseEntity<Transaction> readDepositeService(Transaction transaction) {
		URI uri = URI.create("http://localhost:8899");
		return this.restTemplate.postForEntity(uri,Transaction.class);
	}
	
	  public String reliable() { 
		  return " Deposit Service is Down!!!";
}
	  
}
